<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>-->
    </style>


    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="BaseBackground" >
        <item name="android:background">@drawable/layout_bg_standard</item>
    </style>

    <style name="ButtonGreenStyle1">
        <item name="android:background">@drawable/button_green_bg</item>
        <item name="android:textColor">@drawable/button_green_text</item>
    </style>

    <style name="ButtonOrangeStyle1">
        <item name="android:background">@drawable/button_orange_bg</item>
        <item name="android:textColor">@drawable/button_orange_text</item>
    </style>

    <style name="ButtonLightBlueStyle1">
        <item name="android:background">@drawable/button_blue_bg</item>
        <item name="android:textColor">@drawable/button_blue_text</item>
    </style>

    <style name="ButtonDeleteStyle1">
        <item name="android:background">@drawable/button_red_bg</item>
        <item name="android:textColor">@drawable/button_red_text</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ButtonFinishGame">
        <item name="android:background">@drawable/button_orange_bg</item>
        <item name="android:textColor">@drawable/button_orange_text</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ButtonQuarterTop">
        <item name="android:background">@drawable/button_quarter_top</item>
        <!--icon!-->
    </style>

    <style name="ButtonQuarterBottom">
        <item name="android:background">@drawable/button_quarter_bottom</item>
        <!--icon!-->
    </style>


    <style name="Text_Style_S">
        <item name="android:textSize">@dimen/text_S</item>
        <item name="android:textColor">@color/Gris_Negro</item>
    </style>

    <style name="Text_Style_M">
        <item name="android:textSize">@dimen/text_M</item>
        <item name="android:textColor">@color/Gris_2_score</item>
    </style>

    <style name="Text_Style_L">
        <item name="android:textSize">@dimen/text_L</item>
        <item name="android:textColor">@color/Gris_2_score</item>
    </style>

    <style name="Text_Style_X">
        <item name="android:textSize">@dimen/text_X</item>
        <item name="android:textColor">@color/Gris_2_score</item>
    </style>

    <style name="Text_Style_XL">
        <item name="android:textSize">@dimen/text_XL</item>
        <item name="android:textColor">@color/Gris_2_score</item>
    </style>

    <style name="Text_Style_XXL">
        <item name="android:textSize">@dimen/text_XXL</item>
        <item name="android:textColor">@color/Gris_2_score</item>
    </style>

</resources>
