<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="top|center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/layout_bg_bottomline">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvTitle"
            android:textColor="@color/Gris_2_score" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/layout_bg_standard"
        android:paddingTop="5dp"
        android:gravity="top|center">

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/Ofensive"
            android:id="@+id/bOfensive"
            style="@style/ButtonLightBlueStyle1" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/Defensive"
            android:id="@+id/bDefensive"
            style="@style/ButtonLightBlueStyle1"
            android:layout_marginTop="5dp" />
    </LinearLayout>

</LinearLayout>