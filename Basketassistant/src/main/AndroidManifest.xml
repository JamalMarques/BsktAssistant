<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skynet.basketassistant" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.skynet.basketassistant.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.skynet.basketassistant.SelecTeamAct"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_selec_team"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.skynet.basketassistant.NewUserAct"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_new_user"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.skynet.basketassistant.PartidosAct"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_partidos"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.skynet.basketassistant.JugadoresAct"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_jugadores"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>
